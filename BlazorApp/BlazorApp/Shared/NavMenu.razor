<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">BlazorApp</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
     <ul class="nav flex-column">
          <li class="nav-item px-3">
               <NavLink class="nav-link" href="index">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
               </NavLink>
          </li>
          <li class="nav-item px-3">
               <NavLink class="nav-link" href="commands" Match="NavLinkMatch.All">
                    <span class="oi oi-command" aria-hidden="true"></span> Commands
               </NavLink>
          </li>
          <li class="nav-item px-3">
               <NavLink class="nav-link" href="resources" Match="NavLinkMatch.All">
                    <span class="oi oi-box" aria-hidden="true"></span> Resources
               </NavLink>
          </li>
          <li class="nav-item px-3">
               <NavLink class="nav-link" href="problem" Match="NavLinkMatch.All">
                    <span class="oi oi-bug" aria-hidden="true"></span> Problems
               </NavLink>
          </li>
          <li class="nav-item px-3">
               <NavLink class="nav-link" href="codeblock" Match="NavLinkMatch.All">
                    <span class="oi oi-code" aria-hidden="true"></span> Code Blocks
               </NavLink>
          </li>
          <li class="nav-item px-3">
               <NavLink class="nav-link" href="exercises" Match="NavLinkMatch.All">
                    <span class="oi oi-badge" aria-hidden="true"></span> Exercises
               </NavLink>
          </li>
     </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
